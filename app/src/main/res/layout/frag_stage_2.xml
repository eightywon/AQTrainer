<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eightywon.aqtrainer.StageTwoFragment">

    <ImageButton
        android:id="@+id/btnStage2Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:layout_constraintLeft_creator="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:contentDescription="@+id/btnStartStopStage" />

        <TextView
            android:id="@+id/txtStepDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtStageDescTimer"
            android:layout_alignStart="@+id/txtStageDescTimer"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtStageDescTimer" />

        <TextView
            android:id="@+id/txtStageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/stage2Body"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/txtStageDescTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnStage2Play"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="64sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="152dp"
            android:layout_height="136dp"
            android:layout_above="@+id/txtStepDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@+id/imgStageTarget"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtStageDesc"
            app:srcCompat="@drawable/stage1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="152dp"
            android:layout_height="136dp"
            android:layout_above="@+id/txtStepDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@+id/imgStageTarget"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStageDesc"
            app:srcCompat="@drawable/stage1"
            tools:layout_editor_absoluteX="26dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/leftShot1"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/rightShot1"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="259dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/rightShot2"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/rightShot3"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/rightShot4"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/rightShot5"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/leftShot2"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/leftShot3"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/leftShot4"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225"
        app:srcCompat="@drawable/shot" />

    <ImageView
        android:id="@+id/leftShot5"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271"
        app:srcCompat="@drawable/shot" />

</android.support.constraint.ConstraintLayout>